{
  "name": "smart-keys",
  "displayName": "Smart Keys",
  "description": "Smart behavior for End and Backspace keys, similar to JetBrains IDEs",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.106.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "smart-keys.smartEnd",
        "title": "Smart End"
      },
      {
        "command": "smart-keys.smartBackspace",
        "title": "Smart Backspace"
      }
    ],
    "keybindings": [
      {
        "command": "smart-keys.smartEnd",
        "key": "end",
        "when": "editorTextFocus"
      },
      {
        "command": "smart-keys.smartBackspace",
        "key": "backspace",
        "when": "editorTextFocus && !editorReadonly"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.106.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.46.3",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
